    "dompurify": "^3.2.6",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.2",
    "react-icons": "^5.4.0",
    "react-router-dom": "^7.1.3",
    "react-slick": "^0.30.3",
    "react-toastify": "^11.0.3",
    "slick-carousel": "^1.8.1",
    "socket.io-client": "^4.8.1",
    "three": "^0.172.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@playwright/test": "^1.50.1",
    "@types/crypto-js": "^4.2.2",
